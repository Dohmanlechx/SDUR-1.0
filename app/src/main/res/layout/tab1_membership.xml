<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/editText_member"
        android:layout_width="328dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="@string/hinttext_name"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/textView_yourName"
        app:layout_constraintTop_toBottomOf="@+id/textView_yourName" />

    <TextView
        android:id="@+id/textView_yourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_yourName"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_memberCheck"
        android:layout_width="328dp"
        android:layout_height="133dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_style_3"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:text="@string/text_memberCheck"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_yourName"
        app:layout_constraintStart_toStartOf="@+id/textView_yourName" />

    <Button
        android:id="@+id/button_checkMember"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/button_memberCheck"
        android:textColor="@color/white"
        android:theme="@style/AppTheme.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_member" />
</android.support.constraint.ConstraintLayout>